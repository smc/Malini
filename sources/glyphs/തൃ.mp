input glyph;
beginglyph;
p=0;
z0= (x1 + mw/3, 0);
z1= (0, y0 + mw/2);
z2 = ( x1 + mw/2, 0.975m); % top
z3 = ( x2 + mw/2, y1);
z4 = ( x3 - mw/4, thick*0.6/2); % bottom middle
z5 = ( x4 - mw/4, y3);
z6 = ( x5 + mw/2, y2); % second top
z7 = ( x6 + mw/2, y1);
z8 = (x7 - 2/3mw, -descent*1.2);
z9 = (x8 - mw/3, y8/2);
paths[p] = z0..z1..z2{right}..z3..{left}z4{left}..z5..z6{right}..z7..{left}z8..{dir 75}z9;
z10 = point 7.66 of paths[p];
paths[p] := paths[p] .. {dir -45}z10;
pen_stroke(
    nib(start_up_nib)(0)
    nib(top_nib)(2,6)
    nib(middle_down_nib)(3, 7)
    nib(down_nib)(4)
    nib(middle_up_nib)(1,5)
    nib(down_nib)(8)
    nib(middle_up_nib)(9)
    nib(end_nib rotated 90)(10)
)(paths[p])(strokes[p]);


anchor( "vc", point 4 of paths[0]);
endglyph;
