input glyph;
beginglyph;

z0=(0, s-serif_height/2);
z1=(x0, 0);
paths[p] := z0--z1;
pen_stroke(
    nib(thick_vertical_nib)(0,1)
)(paths[p])(strokes[p]);

p:=p+1;
paths[p] := n_arch shifted(xpart(point 1 of paths[p-1]), 0) xyscaled(0.9, 1);
pen_stroke(
    cut(end_nib scaled 2/3, rel 90)(0)
    nib(top_nib)(1)
    nib(thick_vertical_nib)(2,3)

)(paths[p])(strokes[p]);

p:=p+1;
paths[p] := n_arch xscaled 0.9 shifted(xpart(point 3 of paths[p-1]), 0);
pen_stroke(
    cut(end_nib scaled 2/3, rel 90)(0)
    nib(top_nib)(1)
    nib(thick_vertical_nib)(2,3)

)(paths[p])(strokes[p]);


% Serifs
p:=p+1;
paths[p] := serif_top_slanted shifted point 0 of paths[0];
strokes[p] := serif_stroke_slanted(paths[p]);

strokes[0] := bottom_serif(strokes[0], 1);
strokes[1] := bottom_serif(strokes[1], 3);
strokes[2] := bottom_serif(strokes[2], 3);

lbearing:=serif_width/2;
endglyph;
